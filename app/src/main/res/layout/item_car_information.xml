<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="8dp"
    app:cardCornerRadius="12dp">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp">

    <TextView
        android:id="@+id/available_car_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_margin="10dp"
        android:hint="Departure Time"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/available_car_class"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:hint="VIP or Standard"
        android:textSize="20sp"
        app:layout_constraintLeft_toRightOf="@id/available_car_time"
        app:layout_constraintBaseline_toBaselineOf="@id/available_car_time"/>

    <TextView
        android:id="@+id/route"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="16dp"
        android:textSize="17sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/available_car_time" />

    <TextView
        android:id="@+id/route1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="16dp"
        android:textSize="17sp"
        app:layout_constraintLeft_toRightOf="@id/route"
        app:layout_constraintTop_toBottomOf="@id/available_car_time" />

    <TextView
        android:id="@+id/departure_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Departure time:"
        android:layout_margin="20dp"
        android:textSize="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/route"/>

    <TextView
        android:id="@+id/departure_time1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Departure time"
        android:layout_margin="20dp"
        android:textSize="15dp"
        app:layout_constraintLeft_toRightOf="@id/departure_time"
        app:layout_constraintBaseline_toBaselineOf="@id/departure_time"/>

    <TextView
        android:id="@+id/arrival_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Arrival time:"
        android:layout_margin="20dp"
        android:textSize="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/departure_time"/>

    <TextView
        android:id="@+id/arrival_time1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Departure time"
        android:layout_margin="20dp"
        android:textSize="15dp"
        app:layout_constraintLeft_toRightOf="@id/departure_time"
        app:layout_constraintBaseline_toBaselineOf="@id/arrival_time"/>


    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="8000kys"
        android:layout_margin="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/select_seat_btn"
        app:layout_constraintTop_toBottomOf="@id/arrival_time1"/>


    <Button
        android:id="@+id/select_seat_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Seats"
        android:textAlignment="gravity"
        android:padding="10dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="1dp"
        android:background="@color/colorAccent"
        app:layout_constraintLeft_toLeftOf="@id/price"
        app:layout_constraintTop_toBottomOf="@id/price"/>

</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
